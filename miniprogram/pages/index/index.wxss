page {
  background-color: #f1f1f1;
}

.leftMsg {
  font-size: 35rpx;
  color: #444;
  line-height: 7vw;
  padding: 2vw 2.5vw;
  background-color: #fff;
  margin-left: -1.6vw;
  border-radius: 10rpx;
  z-index: 10;
  word-break:break-all;
}

.rightMsg {
  font-size: 35rpx;
  color: #444;
  line-height: 7vw;
  padding: 2vw 2.5vw;
  background-color: #96EB6A;
  margin-right: -1.6vw;
  border-radius: 10rpx;
  z-index: 10;
  word-break:break-all;
}

.inputRoom {
  width: 100vw;
  top: 163vw;
  height: 10vw;
  border-top: 1px solid green;
  background-color: #f1f1f1;
  position: fixed;
  display: flex;
  align-items: center;
}

input {
  width: 76vw;
  background-color: #fff;
  border-radius: 40rpx;
  margin-left: 2vw;
  font-size: 28rpx;
  color: #444;
}

.pop-window {
  width: 40vw;
}

.toast-box {
  width: 100%;
  height: 100%;
  opacity: 1;
  position: fixed;
  top: 0px;
  left: 0px;
  z-index: 20
}

.toastbg {
  opacity: 1;
  background-color: black;
  position: absolute;
  width: 100%;
  min-height: 100vh;
}

.showToast {
  position: absolute;
  opacity: 1;
  width: 70%;
  margin-left: 15%;
  margin-top: 40%;
}

.toast-title {
  padding-left: 5%;
  background-color: #2196f3;
  color: white;
  padding-top: 2vh;
  padding-bottom: 2vh;
  border-top-right-radius: 16rpx;
  border-top-left-radius: 16rpx;
}

.toast-main {
  padding-top: 2vh;
  padding-bottom: 2vh;
  background-color: white;
  text-align: center;
}

.toast-input {
  margin-left: 5%;
  margin-right: 5%;
  border: 1px solid #ddd;
  padding-left: 2vh;
  padding-right: 2vh;
  padding-top: 1vh;
  padding-bottom: 1vh;
}

.toast-button {
  display: flex;
}

.button1 {
  width: 50%;
}

.button2 {
  width: 50%;
}

.button1 button {
  width: 20rpx;
  background-color: white;
  color: red;
  border-radius: 0px;
  border-bottom-left-radius: 16rpx;
  position: flex;
}

.button2 button{
  width: 20rpx;
  background-color: white;
  color: black;
  border-radius: 0px;
  border-bottom-right-radius: 16rpx;
  position: flex;
}

.button1 button.narrow-button{
  width: 100%;   
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.button2 button.narrow-button{
  width: 100%;   
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.picker {
  padding-top: 1vh;
  padding-bottom: 1vh;
}

